@model Gym

<form asp-action="EditConfirm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-md-3 col-form-label">Nazwa:</label>
        <div class="col-md-9">
            <input asp-for="Name" value="@Model.Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <p></p>
    <div class="form-group row">
        <label asp-for="City" class="col-md-3 col-form-label">Miasto:</label>
        <div class="col-md-9">
            <input asp-for="City" value="@Model.City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <p></p>
    <div class="form-group row">
        <label asp-for="Street" class="col-md-3 col-form-label">Ulica:</label>
        <div class="col-md-9">
            <input asp-for="Street" value="@Model.Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
    </div>
    <p></p>
    <div class="form-group row">
        <label asp-for="Size" class="col-md-3 col-form-label">Wilekość:</label>
        <div class="col-md-9">
            <input asp-for="Size" value="@Model.Size" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
    </div>
    <p></p>
    <label asp-for="Description" class="col-md-12 col-form-label text-center">Opis:</label>
    <div class="col-md-12">
        <textarea asp-for="Description" value="@Model.Description" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <p></p>
    <input type="hidden" asp-for="Id" />
    <div class="text-center form-group">
        <input type="submit" value="Gotowe" formaction="/Gym/EditConfirm" class="btn btn-outline-primary" style=" font-size: 18px; padding: 5px 14px;" />
    </div>
</form>