@model Gym

@{
    ViewData["Title"] = "Usuń silownie";
}

<h1 class ="text-center">Usunąć poniższą siłownię?</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Nazwa</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Adres</th>
        <td>@Model.City, @Model.Street </td>
    </tr>
</table>

<div class="text-center">
    <form method="post" asp-action="DeleteConfirm" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-outline-danger" style="width: 170px">Potwierdź Usunięcie</button>
        <br /> <br />
        <a asp-action="List" class="btn btn-outline-secondary btn-sm" style="width: 170px">Powrót do listy</a>
    </form>
</div>